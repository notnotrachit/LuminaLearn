# Django Configuration
# Copy this file to .env and update with your actual values

# Debug mode (True for development, False for production)
DEBUG=True

# Secret key for Django (generate a new one for production)
SECRET_KEY=your-secret-key-here

# Database URL (SQLite for development, PostgreSQL/MySQL for production)
# For SQLite: sqlite:///./db.sqlite3
# For PostgreSQL: postgres://user:password@localhost:5432/dbname
# For MySQL: mysql://user:password@localhost:3306/dbname
DATABASE_URL=sqlite:///./db.sqlite3

# Allowed hosts (comma-separated list)
ALLOWED_HOSTS=localhost,127.0.0.1

# Stellar Blockchain Configuration
# Network: testnet or mainnet
STELLAR_NETWORK=testnet

# Horizon API URL
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org

# Soroban RPC URL
STELLAR_RPC_URL=https://soroban-testnet.stellar.org

# Stellar Contract ID (deployed attendance contract)
STELLAR_CONTRACT_ID=your-contract-id-here

# Optional: Admin Stellar account secret (for contract initialization)
# STELLAR_ADMIN_SECRET=your-admin-secret-key-here

# Static files configuration
STATIC_URL=/static/